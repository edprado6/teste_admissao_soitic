@model Dominio.Autor

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    @Html.HiddenFor(model => model.AutorId)

    <div class="row">
        <div class="col-lg-6">

            <div class="form-group">
                <label>@Html.LabelFor(model => model.NomeAutor)</label>
                @Html.TextBoxFor(model => model.NomeAutor, new { @placeholder = "Insira o nome do Autor", @maxlength = "100", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.NomeAutor)
            </div>
        </div>
    </div>

    <br />
    <div class="display-label pull-left">
        <button type="submit" class="btn btn-primary"><i class="fa  fa-save"></i> Salvar</button>
    </div>
    <div class="display-label pull-right">
        @Html.ActionLink(" Listar Autores", "index", "index", new { @class = "btn btn-warning fa fa-arrow-left" })
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
