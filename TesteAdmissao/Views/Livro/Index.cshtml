@model IEnumerable<Dominio.Livro>


<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Livros cadastrados
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-livro">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.LivroId)</th>
                                <th>@Html.DisplayNameFor(model => model.NomeLivro)</th>
                                <th>@Html.DisplayNameFor(model => model.Editora)</th>                                
                                <th>@Html.DisplayNameFor(model => model.Autor.NomeAutor)</th>
                                <th>@Html.DisplayNameFor(model => model.Categoria.NomeCategoria)</th>                                
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var livro in Model)
                            {
                                <tr>
                                    <td>@livro.LivroId</td>
                                    <td>@livro.NomeLivro</td>
                                    <td>@livro.Editora</td>                                    
                                    <td>@livro.Autor.NomeAutor</td>
                                    <td>@livro.Categoria.NomeCategoria</td>
                                    
                                    <td>
                                        @Html.ActionLink(" Editar", "edit", "livro", new { livro.LivroId }, new { @class = "btn btn-warning fa fa-edit", id = "btn-edit" })
                                        @Html.ActionLink(" Detalhes", "details", "livro", new { livro.LivroId }, new { @class = "btn btn-success fa fa-search", id = "btn-details" })
                                        @Html.ActionLink(" Excluir", null, null, new { @class = "btn btn-danger fa fa-trash-o btn-delete-livro", data_id = livro.LivroId, id = "btn-delete-livro", href = "#" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<!-- Modal -->
<div class="modal fade" id="alertLivroModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Alerta</h4>
            </div>
            <div class="modal-body">
                Tem certeza que deseja excluir o livro selecionado?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="excluir-livro-action">Excluir</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->