@model Dominio.Categoria

@using (Html.BeginForm("edit", "categoria", FormMethod.Post, new { id = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    @Html.HiddenFor(model => model.CategoriaId)

    <div class="row">
        <div class="col-lg-6">

            <div class="form-group">
                <label>@Html.LabelFor(model => model.NomeCategoria)</label>
                @Html.TextBoxFor(model => model.NomeCategoria, new { @placeholder = "Insira um nome para a categoria", @maxlength = "100", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.NomeCategoria)
            </div>
        </div>
    </div>

    <br />
    <div class="display-label pull-left">
        <button type="submit" class="btn btn-primary"><i class="fa  fa-save"></i> Salvar</button>
    </div>
    <div class="display-label pull-right">
        @Html.ActionLink(" Listar Categorias", "index", "categoria", new { @class = "btn btn-warning fa fa-arrow-left" })
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
